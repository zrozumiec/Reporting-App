@using ReportingApp.Application.CQRS.Commands.Solution.EditSolution;
@model EditSolutionCommand

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/dark.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<h1>CreateSolution</h1>

<h4>FailureSolutionDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FailureId" value="@Model.FailureId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedCostMin" class="control-label"></label>
                <input asp-for="ExpectedCostMin" class="form-control"/>
                <span asp-validation-for="ExpectedCostMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedCostMax" class="control-label"></label>
                <input asp-for="ExpectedCostMax" class="form-control"/>
                <span asp-validation-for="ExpectedCostMax" class="text-danger"></span>
            </div>
            <label asp-for="ExpectedStartTime" class="control-label"></label>
            <div id='flatpickrcontainerStartDate'>
                <span asp-validation-for="ExpectedStartTime" class="text-danger"></span>
                <input asp-for="ExpectedStartTime" type="text" placeholder="Select Date.." data-input>
                <button type="button" class="btn btn-default" title="Select Date" data-toggle>
                    <i class="bi bi-calendar-date fa-4x"></i>
                </button>
                <button type="button" class="btn btn-default btn-sm" title="Clear date" data-clear>
                    <i class="bi bi-x-square fa-4x"></i>
                </button>
            </div>
            <label asp-for="ExpectedEndTime" class="control-label"></label>
            <div id='flatpickrcontainerEndDate'>
                <input asp-for="ExpectedEndTime" type="text" placeholder="Select Date.." data-input>
                <span asp-validation-for="ExpectedEndTime" class="text-danger"></span>
                <button type="button" class="btn btn-default" title="Select Date" data-toggle>
                    <i class="bi bi-calendar-date fa-4x"></i>
                </button>
                <button type="button" class="btn btn-default btn-sm" title="Clear date" data-clear>
                    <i class="bi bi-x-square fa-4x"></i>
                </button>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-failureId ="@Model.Failure.Id">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script type="text/javascript" src="~/js/date-picker.js"></script>
    <script src="~/js/date-picker-disable.js"></script>
}
