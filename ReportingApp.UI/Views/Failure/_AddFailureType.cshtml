@using ReportingApp.UI.Helpers;
@using ReportingApp.UI.Models.FailureVM;
@model FailureCategoriesSelectedList

<style>
    #removeBtn {
        position: relative;
        top: 38%;
    }
</style>


@using (Html.BeginCollectionItem("AddMoreFailureTypes"))
{
    <div id="removeAddMoreDiv" class="col-xs-12 col-sm-12 form-group">
        <div class="row">
            <div class="col-md-4">
                <span>Description: </span>
                <input asp-for="Description" placeholder="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group col-md-4">
                <span>Category: </span>
                <select asp-for="SelectedCategory" class="form-select" asp-items="Model.Categories">
                </select>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-danger btn-sm removeDiv" id="removeBtn">
                    Remove
                </button>
            </div>
            <div class="clearfix"></div>
        </div>
        <br />
        <hr class="my-auto flex-grow-1" />
        <br />
    </div>
}

<script>
    $(".removeDiv").click(function () {
        $(this).parents("#removeAddMoreDiv").remove();
    });
</script>