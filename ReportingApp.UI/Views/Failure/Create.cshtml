@using ReportingApp.Application.CQRS.Commands.Failure;
@using ReportingApp.UI.Models.FailureVM;
@model AddFailureVM

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-group-material {
        position: relative;
        margin-bottom: 0px !important;
    }
</style>

<h1>Create</h1>

<h4>CreateFailureCommand</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CreateFailureCommand.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="CreateFailureCommand.Name" class="control-label"></label>
                <input asp-for="CreateFailureCommand.Name" class="form-control" />
                <span asp-validation-for="CreateFailureCommand.Name" class="text-danger"></span>
            </div>
            <h4>Location</h4>
            <div class="form-group">
                <label asp-for="CreateFailureCommand.Location.Street" class="control-label"></label>
                <input asp-for="CreateFailureCommand.Location.Street" class="form-control" />
                <span asp-validation-for="CreateFailureCommand.Location.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateFailureCommand.Location.City" class="control-label"></label>
                <input asp-for="CreateFailureCommand.Location.City" class="form-control" />
                <span asp-validation-for="CreateFailureCommand.Location.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateFailureCommand.Location.Country" class="control-label"></label>
                <input asp-for="CreateFailureCommand.Location.Country" class="form-control" />
                <span asp-validation-for="CreateFailureCommand.Location.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateFailureCommand.Location.Factory" class="control-label"></label>
                <input asp-for="CreateFailureCommand.Location.Factory" class="form-control" />
                <span asp-validation-for="CreateFailureCommand.Location.Factory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateFailureCommand.Location.Machine" class="control-label"></label>
                <input asp-for="CreateFailureCommand.Location.Machine" class="form-control" />
                <span asp-validation-for="CreateFailureCommand.Location.Machine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateFailureCommand.Location.Description" class="control-label"></label>
                <input asp-for="CreateFailureCommand.Location.Description" class="form-control" />
                <span asp-validation-for="CreateFailureCommand.Location.Description" class="text-danger"></span>
            </div>
            <h4>Problems</h4>


            <section class="forms">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-sm-12">
                                        <partial name="_AddFailureType" model="Model.FailureCategoriesSelectedList" />
                                    </div>
                                    <div id="addAddMoreDiv"></div>
                                    <a id="add_row" class="btn btn-primary float-right"> Add Row</a>
                                    <br />
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" asp-action="Create" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $('#add_row').on('click', function () {
            $.ajax({
                url: '@Url.Action("BlankSentence", "Failure")',
                type: 'POST',
                data: {
                },
                success: function (result) {
                    $('#addAddMoreDiv').append(result);
                },
                error: function () {
                }
            });
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

}