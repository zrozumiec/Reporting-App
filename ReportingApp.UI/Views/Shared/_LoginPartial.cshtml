@using Microsoft.AspNetCore.Identity
@using ReportingApp.Domain.Entities;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul id="login-register">
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><span>Hi   </span> <span style="color:#2dc997">  @User.Identity?.Name!.Split("@")[0]</span></a>
        </li>
        <li>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logoutbtn"type="submit" class="nav-link scrollto">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
