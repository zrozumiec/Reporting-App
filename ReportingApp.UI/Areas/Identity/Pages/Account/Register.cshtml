@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <div>
                <input class="form-check-input" type="radio" name="Input.RoleName" value="Receiver" checked>
                <label class="form-check-label" for="flexRadioDefault1">
                    Register as Receiver
                </label>
                <i class="bi bi-info-circle h5" data-toggle="tooltip" data-placement="top" title="Receiver - the person who are a service provider"></i>
            </div>
            <div>
                <input class="form-check-input" type="radio" name="Input.RoleName" value="Applicant">
                <label class="form-check-label" for="flexRadioDefault2">
                    Register as Applicant
                </label>
                <i class="bi bi-info-circle h5" data-toggle="tooltip" data-placement="top" title="Applicant - the person who wants to report problems"></i>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
