@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<head>
    <link href="~/css/login-register-style.css" rel="stylesheet">
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex justify-content-between align-items-center">
            <nav id="navbar" class="navbar">
                <ul id="login-register">
                    <li>
                        <a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Login">Log in</a>
                    </li>
                </ul>
                <ul id="others">
                    <li><a class="nav-link scrollto" href="@Url.Action("Index", "Home")">Home</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/carousel/carousel1.png" class="d-block w-100" alt="carousel2">
                </div>
            </div>
        </div>

        <div class="hero-container" data-aos="zoom-in" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-auto offset-lg-auto" id="resend-email">
                    <h2>Enter your email.</h2>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-floating mb-1">
                            <input asp-for="Input.Email" class="form-control" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg innerbtn">Resend</button>
                    </form>
                </div>
            </div>
        </div>
    </section><!-- End Hero Section -->
</body>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
