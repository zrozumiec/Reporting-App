@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <link href="~/css/login-register-style.css" rel="stylesheet">
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center header-transparent">
        <div class="container d-flex justify-content-between align-items-center">
            <nav id="navbar" class="navbar">
                <ul id="login-register">
                    <li>
                        <a class="nav-link scrollto active" asp-area="Identity" asp-page="/Account/Login">Log in</a>
                    </li>
                </ul>
                <ul id="others">
                    <li><a class="nav-link scrollto" href="@Url.Action("Index", "Home")">Home</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
        </div>
    </header><!-- End Header -->
    <!-- ======= Hero Section ======= -->
    <section id="hero">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/carousel/carousel1.png" class="d-block w-100" alt="carousel2">
                </div>
            </div>
        </div>

        <div class="hero-container" data-aos="zoom-in" data-aos-delay="100">
            <div class="row">
                <div class="col-lg-auto offset-lg-auto" id="login">
                    <section>
                        <form id="login-form" method="post">
                            <h2>Use a local account to log in.</h2>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-1">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-1">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div id="outer" class="row mb-1">
                                <div class="col-md">
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg innerbtn">Log in</button>
                                </div>
                                <div class="col-md">
                                    <a type="button" class="w-100 btn btn-lg innerbtn" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                </div>
                            </div>
                            <div class="login-options">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </section><!-- End Hero Section -->
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
